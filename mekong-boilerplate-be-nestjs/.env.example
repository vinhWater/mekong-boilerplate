# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=mekong_user
DB_PASSWORD=mekong_password
DB_DATABASE=mekong_boilerplate

# Application configuration
PORT=3001
# NODE_ENV controls Swagger UI availability:
# - development: Swagger UI enabled at /api endpoint
# - production: Swagger UI completely disabled for security
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Email/SMTP Configuration for Magic Link Authentication
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@mekong-boilerplate.com

# Frontend URL (for CORS and magic link redirects)
FRONTEND_URL=http://localhost:3000

# Google OAuth Configuration (optional)
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10
